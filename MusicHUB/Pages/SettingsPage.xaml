<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicHUB.Pages.SettingsPage"
             BackgroundColor="White" Padding="10"
             Title="Настройки">

    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <TableView Intent="Menu">
            <TableView.Root>
                <TableRoot>
                    <TableSection Title="Персональные данные" TextColor="Black">
                        <TextCell Text="Очистить базу данных" TextColor="Black" Command="{Binding ClearDataBaseCommand}"/>
                    </TableSection>
                    <TableSection Title="Помощь" TextColor="Black">
                        <TextCell Text="Руководство" TextColor="Black" Command="{Binding AppTutorialCommand}"/>
                        <TextCell Text="Отзыв" TextColor="Black" Command="{Binding SendEmailCommand}"/>
                        <TextCell Text="Оцените нас" TextColor="Black" Command="{Binding RateUsCommand}"/>
                    </TableSection>
                    <TableSection Title="О приложении" TextColor="Black">
                        <TextCell Text="Версия" Detail="1.0.0.0" TextColor="Black"/>
                        <TextCell Text="Справка" TextColor="Black" Command="{Binding AppInfoCommand}"/>
                    </TableSection>
                </TableRoot>
            </TableView.Root>
        </TableView>
    </ContentPage.Content>
</ContentPage>